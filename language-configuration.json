{
    "comments": {
        // comments applicable to yaml files.
        "lineComment": "#",
        // comments applicable to tpl files.
        "blockComment": [ "{{- /*\n", "\n*/ -}}" ]
    },
    // symbols used as brackets
    "brackets": [
        ["{{", "}}"],
        ["{{-", "-}}"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["{{-", "-"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"]
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["{{", "}}"],
        ["{{-", "-}}"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"]
    ]
}
